<content><![CDATA[
function scaleSize($maxWidth, $maxHeight, $width, $height){
	$ratio = MIN($maxWidth/$width, $maxHeight/$height );
	$width = $ratio * $width;
	$height = $ratio * $height;
	return array('width'=>(int)$width,'height'=>(int)$height);
}

]]></content>
